<!-- main content -->
<main class="main">
    <div class="container-fluid">
        <div class="row row--grid">
            <!-- breadcrumb -->
            <div class="col-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb__item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb__item breadcrumb__item--active">Đăng nhập</li>
                </ul>
            </div>
            <!-- end breadcrumb -->
            <!-- sign in -->
            <div class="col-12">
                <div class="sign">
                    <div class="sign__content">
                        <!-- authorization form -->
                        <form action="/signin" method="post" class="sign__form">
                            <a href="index.html" class="sign__logo">
                                <img src="~/img/logo/logo.png" alt="">
                            </a>

                            <div class="sign__group">
                                <input type="text" class="sign__input" name="Email" placeholder="Email">
                            </div>

                            <div class="sign__group">
                                <input type="password" class="sign__input" name="Password" placeholder="Mật khẩu">
                            </div>
                            @if (ViewBag.ReturnUrl != null)
                            {
                                <input style="display: none" name="returnUrl" type="text" value="@ViewBag.ReturnUrl" checked>
                            }
                            <div class="sign__group sign__group--checkbox">
                                <input id="remember" name="Remember" type="checkbox" value="remember" checked>
                                <label for="remember">Ghi nhớ vào lần sau</label>
                            </div>
                            @if (ViewData["Message"] != null)
                            {
                                <div class="text-center">
                                    <p style="color: white">
                                        @ViewData["Message"]
                                    </p>
                                </div>
                            }
                            <button class="sign__btn" type="submit">Đăng nhập</button>

                            <span class="sign__delimiter">or</span>

                            <div class="sign__social">
                                <a class="fb ml-5" href="#"><svg viewBox="0 0 9 17" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5.56341 16.8197V8.65888H7.81615L8.11468 5.84663H5.56341L5.56724 4.43907C5.56724 3.70559 5.63693 3.31257 6.69042 3.31257H8.09873V0.5H5.84568C3.1394 0.5 2.18686 1.86425 2.18686 4.15848V5.84695H0.499939V8.6592H2.18686V16.8197H5.56341Z" /></svg></a>
                                <a class="gl mr-5" href="#" onClick="window.open('/account/google-signin','Đăng ký với Google','resizable,height=260,width=370'); return false;">
                                    <svg xmlns='http://www.w3.org/2000/svg' class='ionicon' viewBox='0 0 512 512'>
                                        <path d='M473.16 221.48l-2.26-9.59H262.46v88.22H387c-12.93 61.4-72.93 93.72-121.94 93.72-35.66 0-73.25-15-98.13-39.11a140.08 140.08 0 01-41.8-98.88c0-37.16 16.7-74.33 41-98.78s61-38.13 97.49-38.13c41.79 0 71.74 22.19 82.94 32.31l62.69-62.36C390.86 72.72 340.34 32 261.6 32c-60.75 0-119 23.27-161.58 65.71C58 139.5 36.25 199.93 36.25 256s20.58 113.48 61.3 155.6c43.51 44.92 105.13 68.4 168.58 68.4 57.73 0 112.45-22.62 151.45-63.66 38.34-40.4 58.17-96.3 58.17-154.9 0-24.67-2.48-39.32-2.59-39.96z' />
                                    </svg>
                                </a>
                            </div>

                            <span class="sign__text">Bạn chưa có tài khoản? <a href="/signup">Đăng ký ngay!</a></span>

                            <span class="sign__text"><a href="/account/forgot">Quên mật khẩu?</a></span>
                        </form>
                        <!-- end authorization form -->
                    </div>
                </div>
            </div>
            <!-- end sign in -->
        </div>
    </div>
</main>
<!-- end main content -->
@section Scripts {
<script>
    setInterval(() => {
        if (getCookie("success") === "ok") {
            delete_cookie("success")
            setTimeout(() => {
                window.location.href ="@(ViewBag.ReturnUrl == null ? "/" : ViewBag.ReturnUrl)"
            }, 2000)
        }
        console.log(getCookie("success"))
    }, 1000);
    function getCookie(cname) {
        let name = cname + "=";
        let decodedCookie = decodeURIComponent(document.cookie);
        let ca = decodedCookie.split(';');
        for(let i = 0; i <ca.length; i++) {
            let c = ca[i];
            while (c.charAt(0) == ' ') {
                 c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                 return c.substring(name.length, c.length);
            }
        }
        return "";
    }
    function delete_cookie(name) {
        document.cookie = name +'=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
    }
</script>
}

