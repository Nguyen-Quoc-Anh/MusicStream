                                @(Model.PlayListFollows.Count) người theo dõi
                            </span>
                        </div>
                        <button class="release__buy" id="addtowishlist">Thêm vào danh sách phát</button>
                        @if (ViewData["isOwner"] == null)
                        {
                            @if (Accessor.HttpContext.Session.GetString("account") == null)
                            {
                                <button href="#modal-buy" class="release__buy open-modal" style="background-color: cornflowerblue">Theo dõi</button>
                            }
                            else
                            {
                                <button class="release__buy" style="background-color: cornflowerblue;  @(ViewBag.IsAccountFollow != null ? "display: none; " : "")" id="followplaylist">Theo dõi</button>
                                <button class="release__buy" style="background-color: #fc8b6f; @(ViewBag.IsAccountFollow != null ? "" : "display: none; ")" id="unfollowplaylist">Bỏ theo dõi</button>
                            }
                        }
                        else
                        {
                            <button href="#modal-edit" class="release__buy open-modal" id="edit">Chỉnh sửa playlist</button>
                            <button href="#modal-delete" class="release__buy open-modal" style="background-color: #fc8b6f">Xóa playlist</button>
                        }
                    </div>

