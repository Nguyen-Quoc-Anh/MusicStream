        var trackId = sessionStorage.getItem("trackId");
        if (trackId) {
            $.post(`/playlist/addtoplaylist`, {playlistId: playListId, trackId: trackId}, function(response){
                response = JSON.parse(response);
                if (response["Success"]) {
                    $("#pl-success").show();
                    setTimeout(() => {
                        $("#pl-success").hide();
                    }, 3000)
                } else {
                    $("#pl-failed").show();
                    setTimeout(() => {
                        $("#pl-failed").hide();
                    }, 3000)
                }
            });
        }
    }

