                    <li class="breadcrumb__item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb__item"><a href="/home/search">Album</a></li>
                    <li class="breadcrumb__item breadcrumb__item--active">@(Model.AlbumName)</li>
                </ul>
            </div>
            <!-- end breadcrumb -->
            <!-- title -->
            <div class="col-12">
                <div class="main__title main__title--page">
                    <h1>
                        @(Model.AlbumName) -@foreach (var artist in
                        Model.ArtistAlbums)
                        {
                            <a href="/artist/detail/@artist.ArtistId">&nbsp;@($"{artist.Artist.Fullname}")&nbsp;</a>
                            @((Model.ArtistAlbums.ToList().IndexOf(artist) != Model.ArtistAlbums.Count - 1) ? " & " : "")
