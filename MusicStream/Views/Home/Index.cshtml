@{
}
<!-- main content -->
<main class="main">
    <div class="container-fluid">
        <!-- slider -->
        <section class="row">
            <div class="col-12">
                <div class="hero owl-carousel" id="hero">
                    <div class="hero__slide" data-bg="img/home/slide1.jpg">
                        <h1 class="hero__title">Record Label & Music streaming</h1>
                        <p class="hero__text">
                            There are many variations of passages of Lorem Ipsum available, but
                            the majority have suffered alteration in some form, by injected humour, or randomised
                            words which don't look even slightly believable
                        </p>
                        <div class="hero__btns">
                            <a href="#" class="hero__btn hero__btn--green">Buy now</a>
                            <a href="#" class="hero__btn">Learn more</a>
                        </div>
                    </div>

                    <div class="hero__slide" data-bg="img/home/slide2.jpg">
                        <h2 class="hero__title">
                            Metallica and Slipknot feature in trailer for ‘Long Live Rock’
                            documentary
                        </h2>
                        <p class="hero__text">
                            It also features Rage Against The Machine, Guns N' Roses and a number
                            of others
                        </p>
                        <div class="hero__btns">
                            <a href="#" class="hero__btn hero__btn--green">Learn more</a>
                            <a href="http://www.youtube.com/watch?v=0O2aH4XLbto"
                               class="hero__btn hero__btn--video open-video">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M16,10.27,11,7.38A2,2,0,0,0,8,9.11v5.78a2,2,0,0,0,1,1.73,2,2,0,0,0,2,0l5-2.89a2,2,0,0,0,0-3.46ZM15,12l-5,2.89V9.11L15,12ZM12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8,8,0,0,1,12,20Z" />
                                </svg> Watch video
                            </a>
                        </div>
                    </div>

                    <div class="hero__slide" data-bg="img/home/slide3.jpg">
                        <h2 class="hero__title">New Artist of Our Label</h2>
                        <p class="hero__text">
                            There are many variations of passages of Lorem Ipsum available, but
                            the majority have suffered alteration in some form, by injected humour, or randomised
                            words which don't look even slightly believable
                        </p>
                        <div class="hero__btns">
                            <a href="#" class="hero__btn">Learn more</a>
                        </div>
                    </div>
                </div>

                <button class="main__nav main__nav--hero main__nav--prev" data-nav="#hero" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z" />
                    </svg>
                </button>
                <button class="main__nav main__nav--hero main__nav--next" data-nav="#hero" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" />
                    </svg>
                </button>
            </div>
        </section>
        <!-- end slider -->
        <!-- releases -->
        <section class="row row--grid">
            <!-- title -->
            <div class="col-12">
                <div class="main__title">
                    <h2>Mới phát hành</h2>

                    <a href="track/list" class="main__link">
                        Xem tất cả
                        <svg xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 24 24">
                            <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" />
                        </svg>
                    </a>
                </div>
            </div>
            <!-- end title -->
            @foreach (var item in (Dictionary<Album, List<Account>>)ViewData["albums"])
            {
                <div class="col-6 col-sm-4 col-lg-2">
                    <div class="album">
                        <div class="album__cover">
                            <img src="@item.Key.Image" alt="">
                            <a href="/album/detail/@item.Key.AlbumId">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z" />
                                </svg>
                            </a>
                        </div>
                        <div class="album__title">
                            <h3><a href="/album/detail/@item.Key.AlbumId">@item.Key.AlbumName</a></h3>
                            <span>
                                @foreach (Account artist in item.Value)
                                {
                                    <a href="/artist/detail/@artist.AccountId">@artist.Fullname</a> @((item.Value.IndexOf(artist) != item.Value.Count - 1) ? "&" : "")
                                }
                            </span>
                        </div>
                    </div>
                </div>
            }


        </section>
        <!-- end releases -->
        <!-- articts -->
        <section class="row row--grid">
            <!-- title -->
            <div class="col-12">
                <div class="main__title">
                    <h2>Nghệ sĩ</h2>

                    <a href="/artist/list" class="main__link">
                        Xem tất cả
                        <svg xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 24 24">
                            <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" />
                        </svg>
                    </a>
                </div>
            </div>
            <!-- end title -->

            <div class="col-12">
                <div class="main__carousel-wrap">
                    <div class="main__carousel main__carousel--artists owl-carousel" id="artists">
                        @foreach (Account artist in (List<Account>)ViewData["artists"])
                        {
                            <a href="/artist/detail/@artist.AccountId" class="artist">
                                <div class="artist__cover">
                                    <img src="@artist.Image" alt="">
                                </div>
                                <h3 class="artist__title">@artist.Fullname</h3>
                            </a>
                        }
                    </div>

                    <button class="main__nav main__nav--prev" data-nav="#artists" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z" />
                        </svg>
                    </button>
                    <button class="main__nav main__nav--next" data-nav="#artists" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" />
                        </svg>
                    </button>
                </div>
            </div>
        </section>
        <!-- end articts -->

        <section class="row row--grid">
            <div class="col-12 col-md-6">
                <div class="row row--grid">
                    <!-- title -->
                    <div class="col-12">
                        <div class="main__title">
                            <h2>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z" />
                                </svg><a href="#">Bài hát nổi bật</a>
                            </h2>
                        </div>
                    </div>
                    <!-- end title -->

                    <div class="col-12">
                        <ul class="main__list">
                            @foreach (var item in (Dictionary<Track, List<Account>>)ViewData["popularTracks"])
                            {
                                <li class="single-item">
                                    <a data-link data-title="@item.Key.Name"
                                   data-artist="@foreach (Account artist in item.Value)
                                                {
                                                    @artist.Fullname @((item.Value.IndexOf(artist) != item.Value.Count - 1) ? "&" : "")
                                                }"
                                   data-img="@item.Key.Image"
                                   href="@item.Key.Mp3"
                                   class="single-item__cover">
                                        <img src="@item.Key.Image" alt="">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                            <path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z" />
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                            <path d="M16,2a3,3,0,0,0-3,3V19a3,3,0,0,0,6,0V5A3,3,0,0,0,16,2Zm1,17a1,1,0,0,1-2,0V5a1,1,0,0,1,2,0ZM8,2A3,3,0,0,0,5,5V19a3,3,0,0,0,6,0V5A3,3,0,0,0,8,2ZM9,19a1,1,0,0,1-2,0V5A1,1,0,0,1,9,5Z" />
                                        </svg>
                                    </a>
                                    <div class="single-item__title">
                                        <h4><a href="/track/detail/@item.Key.TrackId">@item.Key.Name</a></h4>
                                        <span>
                                            @foreach (Account artist in item.Value)
                                            {
                                                <a href="/artist/detail/@artist.AccountId">@artist.Fullname</a> @((item.Value.IndexOf(artist) != item.Value.Count - 1) ? "&" : "")
                                            }
                                        </span>
                                    </div>
                                    <span class="single-item__time">@TimeSpan.FromSeconds(Convert.ToDouble(item.Key.Duration)).ToString(@"mm\:ss")</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="row row--grid">
                    <!-- title -->
                    <div class="col-12">
                        <div class="main__title">
                            <h2>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M19.12,2.21A1,1,0,0,0,18.26,2l-8,2A1,1,0,0,0,9.5,5V15.35A3.45,3.45,0,0,0,8,15a3.5,3.5,0,1,0,3.5,3.5V10.78L18.74,9l.07,0L19,8.85l.15-.1a.93.93,0,0,0,.13-.15.78.78,0,0,0,.1-.15.55.55,0,0,0,.06-.18.58.58,0,0,0,0-.19.24.24,0,0,0,0-.08V3A1,1,0,0,0,19.12,2.21ZM8,20a1.5,1.5,0,1,1,1.5-1.5A1.5,1.5,0,0,1,8,20ZM17.5,7.22l-6,1.5V5.78l6-1.5Z" />
                                </svg><a href="#">Bài hát mới</a>
                            </h2>
                        </div>
                    </div>
                    <!-- end title -->

                    <div class="col-12">
                        <ul class="main__list">
                            @foreach (var item in (Dictionary<Track, List<Account>>)ViewData["tracks"])
                            {
                                <li class="single-item">
                                    <a data-link data-title="@item.Key.Name"
                                   data-artist="@foreach (Account artist in item.Value)
                                                {
                                                    @artist.Fullname @((item.Value.IndexOf(artist) != item.Value.Count - 1) ? "&" : "")
                                                }"
                                   data-img="@item.Key.Image"
                                   href="@item.Key.Mp3"
                                   class="single-item__cover">
                                        <img src="@item.Key.Image" alt="">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                            <path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z" />
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                            <path d="M16,2a3,3,0,0,0-3,3V19a3,3,0,0,0,6,0V5A3,3,0,0,0,16,2Zm1,17a1,1,0,0,1-2,0V5a1,1,0,0,1,2,0ZM8,2A3,3,0,0,0,5,5V19a3,3,0,0,0,6,0V5A3,3,0,0,0,8,2ZM9,19a1,1,0,0,1-2,0V5A1,1,0,0,1,9,5Z" />
                                        </svg>
                                    </a>
                                    <div class="single-item__title">
                                        <h4><a href="/track/detail/@item.Key.TrackId">@item.Key.Name</a></h4>
                                        <span>
                                            @foreach (Account artist in item.Value)
                                            {
                                                <a href="/artist/detail/@artist.AccountId">@artist.Fullname</a> @((item.Value.IndexOf(artist) != item.Value.Count - 1) ? "&" : "")
                                            }
                                        </span>
                                    </div>
                                    <span class="single-item__time">@TimeSpan.FromSeconds(Convert.ToDouble(item.Key.Duration)).ToString(@"mm\:ss")</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
<!-- end main content -->
